<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Servlet Filter Demo</display-name>

	<!--  FILTER CONFIG - START -->
	<filter>
		<filter-name>LoggingFilter</filter-name>
		<filter-class>com.examples.java.servlet.filter.LoggingFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>LoggingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>AuthFilter</filter-name>
		<filter-class>com.examples.java.servlet.filter.AuthFilter</filter-class>
		<init-param>
			<param-name>message</param-name>
			<param-value>Servlet Filter Demo</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>AuthFilter</filter-name>		
		<url-pattern>/*</url-pattern>
	</filter-mapping>	
	<!--  FILTER CONFIG - END -->
	
	<!--  SERVLET CONFIG - START -->
	<servlet>
		<servlet-name>GreetingServlet</servlet-name>
		<servlet-class>com.examples.java.servlet.filter.GreetingServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>GreetingServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<!--  SERVLET CONFIG - END -->
</web-app>